
<div class="container col-6">
  <%= form_with(model: organization) do |form| %>
    <% if organization.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(organization.errors.count, "error") %> prohibited this image from being saved:</h2>

        <ul>
          <% organization.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <form>
      <div class="form-group">
        <%= form.label :name, style: "display: block", class: "flabel" %>
        <%= form.text_field :name %>
      </div>

      <button type="submit" class="btn btn-primary mt-3">Save organization </button>
    </form>

    <div>
      <%= link_to "Back to organizations", organizations_path, class: "btn btn-warning mt-5" %>
    </div>

  <% end %>
</div>

